@model List<WorkListDto>
<html xmlns="http://www.w3.org/1999/xhtml">
<head lang="tr">
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <div class="container my-2">
        <div class="text-end my-3">
            <a asp-action="Create" class="btn btn-primary">Yeni İş Ekle</a>
        </div>
        <table class="table table-striped table-bordered table-sm">
            <thead>
                <tr>
                    <th>İş</th>
                    <th>Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Definition</td>
                        <td>@(item.IsCompleted ? "Tamamlandı" : "Tamamlanmadı")</td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                            <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">sil</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>