@model WorkUpdateDto
<html xmlns="http://www.w3.org/1999/xhtml">
<head lang="tr">
    <title>Todo App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <div class="container my-2">
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label>işin tanımı</label>
                <input asp-for="Definition" class="form-control" />
                <span class="text-danger" asp-validation-for="Definition"></span>
            </div>

            <div class="form-check">
                <input type="checkbox" asp-for="IsCompleted" class="form-check-input" id="asd" />
                <label class="form-check-label" for="asd"> Tamamlandımı </label>
            </div>

            <div class="mb-3">
                <button class="btn btn-primary">Kaydet</button>
            </div>
            <div asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</body>
</html>